<div class='mt-4'>
  <h2>Chỉnh sửa khóa học</h2>

  <form class='mt-3' method='POST' action='/courses/{{course._id}}?_method=PUT'>
    <div class='form-group'>
      <label for='name-input'>Mô tả khóa học</label>
      <input
        type='text'
        class='form-control'
        id='name-input'
        name='name'
        value='{{course.name}}'
      />
    </div>

    <div class='form-group'>
      <label for='thumbnail-input'>Hình ảnh</label>
      <input
        type='text'
        class='form-control'
        id='thumbnail-input'
        name='thumbnail'
        value='{{course.thumbnail}}'
      />
    </div>

    <div class='form-group'>
      <label for='videoId-input'>Video ID</label>
      <input
        type='text'
        class='form-control'
        id='videoId-input'
        name='videoId'
        value='{{course.videoId}}'
      />
    </div>

    <button type='submit' class='btn btn-primary'>Chỉnh sửa</button>
  </form>
</div>